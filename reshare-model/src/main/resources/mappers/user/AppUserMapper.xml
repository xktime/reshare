<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xktime.model.mappers.user.AppUserMapper">

    <insert id="saveUser" parameterType="com.xktime.model.user.pojos.AppUser">
        INSERT INTO app_user(id,user_id,user_name,account,password,phone_number,image,sex,is_certification,is_identity_authentication,status,flag,region,birthday,created_time)
        VALUES (#{id},#{userId},#{userName},#{account},#{password},#{phoneNumber},#{image},#{sex},#{isCertification},#{isIdentityAuthentication},#{status},#{flag},#{birthday},#{region},#{createTime})
    </insert>

    <select id="queryByAccount" resultType="com.xktime.model.user.pojos.AppUser">
        SELECT * from app_user WHERE account = #{account}
    </select>
</mapper>