<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xktime.model.mappers.article.ArticleMapper">

    <insert id="saveArticle" parameterType="com.xktime.model.article.pojos.Article">
        INSERT INTO article(title,content,author_id,author_name,channel_id,channel_name,images,labels,likes,collection,comment,views,publish_time,origin,status)
        VALUES (#{title},#{content},#{authorId},#{authorName},#{channelId},#{channelName},#{images},#{labels},#{likes},#{collection},#{comment},#{views},#{publishTime},#{origin},#{status})
    </insert>

    <select id="load" resultType="com.xktime.model.article.pojos.Article">
        SELECT * FROM article
        ORDER BY publish_time DESC
        LIMIT #{size} OFFSET #{pageStartIndex}
    </select>
</mapper>